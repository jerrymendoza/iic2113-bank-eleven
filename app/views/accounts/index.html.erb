<p id="notice"><%= notice %></p>


<div class="container">
<h3>Accounts of <%=@user.email%></h3>
<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th>Balance</th>
      <th>Account type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.number %></td>
        <td><%= account.balance %></td>
        <td><%= account.account_type %></td>
        <td><%= account.user.email %></td>
        <td><%= link_to "Show Movements", user_account_transactions_path(current_user ,account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>


