<p id="notice"><%= notice %></p>

<h1>Accounts of <%=current_user.email%></h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Balance</th>
      <th>Account type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
    <% current_user.accounts.each do |account| %>
      <tr>
        <td><%= account.number %></td>
        <td><%= account.balance %></td>
        <td><%= account.account_type %></td>
        <td><%= account.user.email %></td>
        <td><%= link_to 'Show', [current_user, account] %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

